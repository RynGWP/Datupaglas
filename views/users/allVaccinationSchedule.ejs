      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-lg-12 col-sm-12">
            <h1 class="mb-5 shine">CHILD IMMUNIZATION RECORD</h1>
            <% if (patientFullName || parentFullname || patientBirthday) { %>
        
            
       <div class="row d-flex justify-content-center">
        <div class="col-md-5">

          <div class="card card-widget widget-user">
          
          <div class="widget-user-header bg-info">
          <h3 class="widget-user-username"><%= patientFullName %></h3>
          <h5 class="widget-user-desc">Patient</h5>
          </div>
