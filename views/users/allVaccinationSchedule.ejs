  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <% if (locals.vaccinationSchedules) { %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-lg-12 col-sm-12">
            <h1 class="mb-5">CHILD IMMUNIZATION RECORD</h1>
            <% if (patientFullName || parentFullname || patientBirthday) { %>
        
            
       <div class="row d-flex justify-content-center">
        <div class="col-md-5">

          <div class="card card-widget widget-user">
          
          <div class="widget-user-header bg-info">
          <h3 class="widget-user-username"><%= patientFullName %></h3>
          <h5 class="widget-user-desc">Patient</h5>
          </div>
          <div class="widget-user-image">
          <img class="img-circle elevation-2" src="../dist/img/baby.png" alt="User Avatar">
          </div>
          <div class="card-footer">
          <div class="row">
            <h5 class="mx-auto"> Date of birth : <span style="font-weight: 500; font-family:Montserrat ; text-decoration: underline;"><%= new Date(patientBirthday).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span></h5>
          </div>
          <div class="row">
            <h5 class="mx-auto"> Parent : <span style="font-weight: 500; font-family:Montserrat ; text-decoration: underline;"><%= parentFullname %></span></h5>
          </div>
          </div>
          
          </div>
          
       
          </div>
          
        
         
       </div>
              <% } %>
          </div>
          
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <table id="vaccinationTable" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th class="d-none"></th>
                      <th class="d-none">Full name</th>
                      <th>Vaccine name</th>
                      <th>Schedule date</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                  
                      <% vaccinationSchedules.forEach(function(vaccinationSchedule) { %>
                        <tr>
                          <td class="d-none vaccinationTdid"><%= vaccinationSchedule.schedule_id %></td>
                          
                          <td class="vaccinationTdShowtoMobile"><%= vaccinationSchedule.vaccine_name %></td>
                          <!-- Schedule date with icon aligned on both sides -->
                          <td class="vaccinationTdShowtoMobile">
                            
                              <span>
                                <%= new Date(vaccinationSchedule.schedule_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                              </span>
                              <button type="button" class="btn btn-sm text-light editSchedule" aria-label="EditSchedule">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-pencil-square me-1" viewBox="0 0 16 16">
                                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                </svg>
                              </button>
                          
                          </td>
                          <td class=" d-none">/td>
                
                          <!-- Status with text and icon aligned on both sides -->
                          <td class="vaccinationTdShowtoMobile">
                            <span style="width: 100%; display: block; overflow: hidden;">
                              <span style="float: left;">
                                <% if (vaccinationSchedule.status === 'Taken') { %>
                                  <p class="text-lime mb-0" style="display: inline;">Taken</p>
                                <% } else { %>
                                  <p class="text-danger mb-0" style="display: inline;">Not Taken</p>
                                <% } %>
                              </span>
                              <button type="button" class="btn btn-sm text-light editStatus" aria-label="EditVaccination" style="float: right;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#00ff00" class="bi bi-pencil-square me-1" viewBox="0 0 16 16">
                                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                </svg>
                              </button>
                            </span>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="7" class="text-center text-light">No Schedules found</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
                
                
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>


      <!-- Update Vaccination Status Modal -->
<div class="modal fade" id="editVaccinationModal" tabindex="-1" aria-labelledby="editVaccinationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-light" id="editVaccinationModalLabel">Edit Vaccination Status</h5>
      </div>
      <div class="modal-body text-dark">
        <form id="editVaccinationStatus" class="p-3">
          <input type="hidden" id="scheduleId" name="scheduleId">
          <div class="col-lg-12 col-sm-12 mb-3 input-container">
            <label class="text-light mb-1 fs-6">Select Status</label>
            <select class="form-select mb-5 text-dark col-lg-6 py-2 ps-2" name="status" id="status">
              <option value="Taken">Taken</option>
              <option value="not taken">Not Taken</option>
            </select>
          </div>
          <div class="d-flex justify-content-end m-2">
            <button type="submit" class="btn btn-success" style="margin-right:5px !important">Update</button>
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

      <!-- Update Vaccination Schedule Modal -->
<div class="modal fade" id="editScheduleModal" tabindex="-1" aria-labelledby="editScheduleModalLabel" aria-hidden="true">
  <div class="modal-dialog col-lg-4"> 
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-light" id="editScheduleModalLabel">Edit Vaccination Schedule</h5>
       
      </div>
      <div class="modal-body text-dark">
        <form id="editVaccinationSchedule" class="p-3">
          <input type="hidden" id="scheduleId" name="scheduleId">
          <div class="col-lg-12 col-sm-12 mb-3 input-container">
            <label class="text-light mb-1">Current Schedule Date</label>
            <input type="text" id="vaccinationSchedule" class="input mb-3" name="vaccinationSchedule" placeholder=" ">
          </div>
          <!-- Predefined Date Intervals -->
          <div class="mb-3">
            <label for="scheduleOptions" class="text-light mb-2">RESCHEDULE BY</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="scheduleOptions" value="1" id="nextWeek">
              <label class="form-check-label text-light" for="nextWeek">
                Next Week
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="scheduleOptions" value="2" id="next2Weeks">
              <label class="form-check-label text-light" for="next2Weeks">
                Next 2 Weeks
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="scheduleOptions" value="3" id="next3Weeks">
              <label class="form-check-label text-light" for="next3Weeks">
                Next 3 Weeks
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="scheduleOptions" value="4" id="nextMonth">
              <label class="form-check-label text-light" for="nextMonth">
                Next Month
              </label>
            </div>
          </div>

          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success "  style="margin-right:5px !important">Update</button>
            <button type="button" class="btn btn-danger " data-bs-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

