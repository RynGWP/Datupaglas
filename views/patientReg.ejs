    <style>
      .input-container {
          position: relative;
          margin-bottom: 1.5rem;
      }

      .input {
          background-color: #ffffff;
          color: #000000;
          width: 100%;
          padding: 15px 10px 10px 10px; /* Adjust padding for visual clarity */
          outline: none;
          border: 1px solid rgba(105, 105, 105, 0.397);
          border-radius: 2px;
          font-size: medium;
      }

      .input + label {
          color: rgba(0, 0, 0, 0.5);
          position: absolute;
          left: 25px;
          top: 15px; /* Initial label position */
          font-size: 1rem;
          pointer-events: none; /* Prevent interaction with label */
          transition: all 0.2s ease-in-out;
      }

      /* When the input is focused or contains text */
      .input:focus + label,
      .input:not(:placeholder-shown) + label {
          color: #1f245b;
          top: -8px; /* Move label up */
          left: 22px;
          font-size: 0.9rem;
          font-weight: 600;
          background-color: #ffffff;
         /* Give the label a background to overlap the input */
         
      }

      .input::placeholder {
          color: transparent; /* Hide default placeholder */
      }

      /* General styling for select to remove border and outline */
/* Wrapper styling */
.select-wrapper {
  position: relative;
  width: 100%;
}

.custom-select {
  appearance: none; /* Removes default OS styling */
  border: 1px solid rgba(105, 105, 105, 0.397);
  border-radius: 2px;
  outline: none;
  padding: 15px 10px 10px 10px ; /* Matches input padding */
  width: 100%; /* Full width */
  background-color: #ffffff; /* Matches other input backgrounds */
  font-size: 0.9; /* Font size consistency */
}

/* Label styling */
.select-label {
  position: absolute;
  left: 15px;
  top: 15px; /* Initial label position */
  font-size: 1rem;
  color: rgba(0, 0, 0, 0.5);
  transition: 0.3s ease; /* Smooth transition */
  pointer-events: none; /* Prevent interaction with the label */

}

/* Float label when select is focused or has the 'selected' class */
.custom-select:focus + .select-label,
.select-wrapper.has-value .select-label {
  top: -8px; /* Move label up */
  left: 15px;
  font-size: 0.9rem;
  font-weight: 600;
  color: #1f245b;
  background-color: #ffffff;
  transition: 0.3s ease; /* Smooth transition */
}

  </style>


</head>
<body>

    <%- include("partials/header.ejs") %>

    <div class="container col-lg p-2 mx-auto ">
        <div class="row col-lg-12 col-sm-12 d-flex justify-content-center">
            <div class="col-sm-12 d-flex justify-content-center col-lg-12 ">
              <div id="lottie-animation" class="d-none d-lg-flex" style="width: 600px; height: 600px;"></div>
                   <div class="card p-4" style=" position: relative;
            display: block;
            padding: 2.2rem;
            max-width: 600px;
            background: rgb(252, 253, 255);
            border: 2px solid #fff;
            /* -webkit-box-shadow: rgba(0, 212, 255) 0px 0px 50px -15px;
            box-shadow: rgba(0, 212, 255) 0px 0px 50px -15px; */
            overflow: hidden;
            z-index: +1;
            border-radius: 8px;">
                  <form action="/patientRegistration" class="form p-0" method="post" id="patientForm">
                    <h4 class="fw-lighter text-dark mb-5 text-center fw-bold fs-3">PATIENT REGISTRATION</h4>
                    <div class="row mx-auto col-lg-12">
                        <div class="col-lg-6 col-sm-12 mb-3 input-container">
                            <input type="text" id="firstName" class="input" name="firstName"  placeholder=" ">
                            <label for="firstName">Child's first name</label>
                        </div>
                        <div class="col-lg-6 col-sm-12 mb-3 input-container">
                            <input type="text" id="lastName" class="input" name="lastName"  placeholder=" ">
                            <label for="lastName">Child's last name</label>
                        </div>

                        <section class="bg-stars">
                            <span class="star"></span>
                            <span class="star"></span>
                            <span class="star"></span>
                            <span class="star"></span>
                          </section>

                          <div class="col-lg-6 col-sm-12 mb-3 input-container">
                              <input type="text" id="datepickerBirthday" class="input" name="birthday"  placeholder=" ">
                              <label for="birthdayInput">Child's birthday</label>
                          </div>
                          <div class="col-lg-6 col-sm-12 mb-3 input-container">
                              <div class="select-wrapper">
                                  <select class="custom-select" id="gender" name="gender">
                                      <option value="" selected disabled ></option>
                                      <option value="Male">Male</option>
                                      <option value="Female">Female</option>
                                  </select>
                                  <label for="gender" class="select-label">Child's gender</label>
                              </div>
                          </div>
                        <div class="col-lg-6 col-sm-12 mb-3 input-container">
                            <input type="email" id="email" class="input" name="email"  placeholder=" ">
                            <label for="email"> Parent's email</label>
                        </div>
                        <div class="col-lg-6 col-sm-12 mb-3 input-container">
                            <input type="tel" id="contactNumber" class="input" name="contactNumber"  placeholder=" ">
                            <label for="contactNumber">Parent's contact number</label>
                        </div>
                        <div class="col-lg-6 col-sm-12 mb-3 input-container">
                            <input type="text" id="datepickerRegistrationDate" class="input" name="registrationDate"  placeholder=" ">
                            <label for="registrationDateInput">Registration Date</label>
                        </div>
                        
                        <div class="col-lg-6 col-sm-12 mb-3 input-container">
                          <div class="select-wrapper">
                              <select class="custom-select" id="barangay" name="barangay">
                                  <option value="" disabled selected></option>
                                  <option value="Aringay">Aringay</option>
                                  <option value="Bangilan">Bangilan</option>
                                  <option value="Bannawag">Bannawag</option>
                                  <option value="Cuyapon">Cuyapon</option>
                                  <option value="Dagupan">Dagupan</option>
                                  <option value="Katidtuan">Katidtuan</option>    
                                  <option value="Kayaga">Kayaga</option>
                                  <option value="Kilagasan">Kilagasan</option>
                                  <option value="Magatos">Magatos</option>
                                  <option value="Malamote">Malamote</option>
                                  <option value="Malanduague">Malanduague</option>
                                  <option value="Osias">Osias</option>
                                  <option value="Paatan Lower">Paatan Lower</option>
                                  <option value="Paatan Upper">Paatan Upper</option>
                                  <option value="Pisan">Pisan</option>
                                  <option value="Poblacion">Poblacion</option>
                                  <option value="Salapungan">Salapungan</option>
                              </select>
                              <label for="barangay" class="select-label">Barangay</label>
                          </div>
                      </div>



                        <div class="col-lg-12 col-sm-12 mb-3 input-container">
                          <input type="password" id="password" class="input" placeholder=" " name="password">
                          <label for="password">Password</label>
                      </div>
  
                      <div class="col-lg-12 col-sm-12 input-container">
                          <input type="password" id="confirm-password" class="input" placeholder=" " name="confirm-password">
                          <label for="confirm-password">Confirm Password</label>
                      </div>

                        <div class="col-lg-12 col-sm-12 input-container mx-auto">
                          <button type="submit" class="btn btn-success py-2 w-100 mt-3 " id="patientRegistrationButton">
                            SIGN UP
                         </button>
                        </div>
                    </div>
                </form>
                </div>
        </div>
    </div>
    

    <footer class="mt-auto">
        <%-include("partials/footer.ejs") %>
    </footer>


    
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const selects = document.querySelectorAll('.custom-select');
        
        selects.forEach(select => {
          select.addEventListener('change', function() {
            const wrapper = this.closest('.select-wrapper');
            if (this.value) {
              wrapper.classList.add('has-value');
            } else {
              wrapper.classList.remove('has-value');
            }
          });
        });
      });
      </script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.6/lottie.min.js"></script>
<script>
    // Load the animation
    var animation = lottie.loadAnimation({
        container: document.getElementById('lottie-animation'), // the DOM element that will contain the animation
        path: '../../../lottiefiles/registrationAnimation.json', // the path to the animation json
        renderer: 'svg', // renderer type: 'svg', 'canvas', 'html'
        loop: true, // loop the animation
        autoplay: true, // start playing the animation
        rendererSettings: {
        preserveAspectRatio: 'xMidYMid slice', // Adjust as needed
    }
    });
</script>



