  <div class="row d-flex justify-content-center">
  <div id="lottie-animation" class="d-none d-lg-flex" style="width: 600px; height: 600px;"></div>
  <div class="register-box " style="width:600px" >
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <a href="#" class="h1"><b>PATIENT REGISTRATION</a>
      </div>
     
  
    
          <div class="row ">
            <div class="col-md-12">
              <div class="card card-default">

                <div class="card-body">
                  <div class="bs-stepper">
                    <div class="bs-stepper-header" role="tablist">
                      <!-- your steps here -->
                      <div class="step" data-target="#logins-part">
                        <button type="button" class="step-trigger" role="tab" aria-controls="logins-part" id="logins-part-trigger">
                          <span class="bs-stepper-circle">1</span>
                          <span class="bs-stepper-label">Child Information</span>
                        </button>
                      </div>
                      <div class="line"></div>
                      <div class="step" data-target="#information-part">
                        <button type="button" class="step-trigger" role="tab" aria-controls="information-part" id="information-part-trigger">
                          <span class="bs-stepper-circle">2</span>
                          <span class="bs-stepper-label">Parent Information</span>
                        </button>
                      </div>
                    </div>
                    <div class="bs-stepper-content">
                      <!-- your steps content here -->
                      <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        
              <form action="/patientRegistration" class="form p-0" method="post" id="patientForm">
                         <div class="col-lg-12 col-sm-12 mb-3 input-container">
                            <label for="firstName">First name</label>
                            <input type="text" id="firstName" class="form-control" name="firstName"  placeholder=" ">
                         </div>
                      <div class="col-lg-12 col-sm-12 mb-3 input-container">
                        <label for="lastName">Last name</label>
                          <input type="text" id="lastName" class="form-control" name="lastName"  placeholder=" ">
                      </div>
                   

                      
                          <div class="col-lg-12 col-sm-12 mb-3 input-container">
                            <div class="form-group">
                              <label>Date of Birth</label>
                                <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                    <input type="text" class="form-control datetimepicker-input" data-target="#reservationdate" name="birthday">
                                    <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-sm-12 mb-4 input-container">
                            <div class="select-wrapper">
                              <label for="gender" class="select-label">Gender</label>
                                <select class="custom-select" id="gender" name="gender">
                                    <option value="" selected disabled ></option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>
                    
                        
                        <div class="d-flex justify-content-center">
                          <button class="btn btn-primary col-lg-12" onclick="event.preventDefault(); stepper.next()">Next</button>
                        </div>
                      </div>
                      <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">
                        
                     <div class="row">
                      <div class="col-lg-6 col-sm-12 mb-3 input-container">
                        <label for="firstName">First name</label>
                        <input type="text" id="parentfirstName" class="form-control" name="parentFirstName"  placeholder=" ">
                     </div>
                  <div class="col-lg-6 col-sm-12 mb-3 input-container">
                    <label for="lastName">Last name</label>
                      <input type="text" id="parentlastName" class="form-control" name="parentLastName"  placeholder=" ">
                  </div>
                     </div>
                     <div class="row">
                      <div class="col-lg-6 col-sm-12 mb-3 input-container">
                        <label for="email">Email</label>
                        <input type="email" id="email" class="form-control" name="email"  placeholder=" ">
                    </div>
                    <div class="col-lg-6 col-sm-12 mb-3 input-container">
                      <label for="contactNumber">Contact number</label>
                        <input type="tel" id="contactNumber" class="form-control" name="contactNumber"  placeholder=" ">
                    </div>
                     </div>

                    <div class="row">
                      <div class="form-group col-lg-6 col-sm-12 mb-3">
                        <label>Date of Registration</label>
                        <div class="input-group date " id="registrationDate" data-target-input="nearest">
                              <input type="text" class="form-control datetimepicker-input" data-target="#registrationDate" name="registrationDate">
                              <div class="input-group-append" data-target="#registrationDate" data-toggle="datetimepicker">
                                  <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                              </div>
                          </div>
                      </div>
                    
                    <div class="col-lg-6 col-sm-12 mb-3 input-container">
                      <div class="select-wrapper">
                        <label for="barangay" class="select-label">Barangay</label>
                        <select class="custom-select" id="barangay" name="barangay">
                            <option value="" disabled selected></option>
                            <option value="Aringay">Aringay</option>
                            <option value="Bangilan">Bangilan</option>
                            <option value="Bannawag">Bannawag</option>
                            <option value="Cuyapon">Cuyapon</option>
                            <option value="Dagupan">Dagupan</option>
                            <option value="Katidtuan">Katidtuan</option>    
                            <option value="Kayaga">Kayaga</option>
                            <option value="Kilagasan">Kilagasan</option>
                            <option value="Magatos">Magatos</option>
                            <option value="Malamote">Malamote</option>
                            <option value="Malanduague">Malanduague</option>
                            <option value="Osias">Osias</option>
                            <option value="Paatan Lower">Paatan Lower</option>
                            <option value="Paatan Upper">Paatan Upper</option>
                            <option value="Pisan">Pisan</option>
                            <option value="Poblacion">Poblacion</option>
                            <option value="Salapungan">Salapungan</option>
                        </select>
                      </div>
                    </div>
                    </div>



                     <div class="row">
                      <div class="col-lg-6 col-sm-12 mb-3 input-container">
                        <label for="password">Password</label>
                        <input type="password" id="password" class="form-control" placeholder=" " name="password">
                    </div>

                    <div class="col-lg-6 col-sm-12 input-container">
                      <label for="confirm-password">Confirm Password</label>
                        <input type="password" id="confirm-password" class="form-control" placeholder=" " name="confirm-password">
                    </div>
                     </div>


                       <div class="">
                         <button type="submit" id="patientRegistrationButton" class="btn btn-success col-12 my-3">Submit</button>
                         <button class="btn btn-primary col-12 mb-3" onclick="event.preventDefault(); stepper.previous()">Previous</button>
                       </div>
                </form>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- /.card-body -->
               
              </div>
              <!-- /.card -->
            </div>
          </div>
      
      <!-- /.form-box -->

  </div>
  </div>



  <script>
    document.addEventListener('DOMContentLoaded', function () {
    var stepperElement = document.querySelector('.bs-stepper');
    var stepper = new Stepper(stepperElement);

    // Next button handler
    document.querySelector('.btn-primary').addEventListener('click', function (event) {
        event.preventDefault();
        stepper.next();
    });

    // Previous button handler
    document.querySelector('.btn-primary.mb-3').addEventListener('click', function (event) {
        event.preventDefault();
        stepper.previous();
    });


    // Datepickers initialization
    $(function () {
        $('#reservationdate').datetimepicker({
            format: 'L'
        });
        $('#registrationDate').datetimepicker({
            format: 'L'
        });
    });
});

  </script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.6/lottie.min.js"></script>
  <script>
    // Load the animation
    var animation = lottie.loadAnimation({
        container: document.getElementById('lottie-animation'), // the DOM element that will contain the animation
        path: '/lottiefiles/registrationAnimation.json',
        // path:'https://lottie.host/a12834f7-7b6a-4b7a-a420-8bb7664fa40b/Cozxj69PwI.json', // the path to the animation json
        renderer: 'svg', // renderer type: 'svg', 'canvas', 'html'
        loop: true, // loop the animation
        autoplay: true, // start playing the animation
        rendererSettings: {
        preserveAspectRatio: 'xMidYMid slice', // Adjust as needed
    }
    });
</script>

