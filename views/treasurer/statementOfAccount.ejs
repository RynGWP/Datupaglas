<div class="modal fade" id="Modal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header">
        <h4 class="modal-title">Add Payment</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body p-4">
       
        <form id="taxForm" action="/updatePayment" method="post">
          <input type="hidden" name="taxpayer_id" id="taxpayer_id">
          <input type="hidden" id="area_size" name="area_size">
          <input type="hidden" id="classification" name="classification">
          <input type="hidden" id="property_use" name="property_use">
          <div class="row">
            <div class="col-lg-6">
              <div class="form-group">
                <label for="gender">Property Type</label>
                <select class="custom-select" id="propertyType" name="property_type" required>
                  <option value="">Select Property Type</option>
                            <option value="Residential">Residential</option>
                            <option value="Commercial">Commercial</option>
                            <option value="Industrial">Industrial</option>
                            <option value="Mineral">Mineral</option>
                            <option value="Agricultural">Agricultural</option>
                            <option value="Timberland">Timberland</option>
                </select>
              </div>
            </div>

            <div class="col-md-6">
              <label for="assessmentLevel" class="form-label">Assessment Level (%)</label>
              <input type="number"  id="assessmentLevel" placeholder="Enter Assessment Level (%)" class="form-control" required name="assessment_level">
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label for="marketValue" class="form-label">Market Value (₱)</label>
              <input type="number" id="marketValue" placeholder="Enter Market Value" class="form-control" required name="market_value">
            </div>

            <div class="col-md-6">
              <label for="taxRate" class="form-label">Tax Rate (%)</label>
              <input type="number" id="taxRate" placeholder="Enter Tax Rate" class="form-control" required name="tax_rate">
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-12">
              <label for="assessedValue" class="form-label">Total Assessed Value</label>
              <input type="number" id="assessedValue" value="0.00" class="form-control  fs-5 "  style="font-weight: bold; color:#00ff00;background-color: black;" name="assessed_value">
            </div>
          </div>

          <div class="row mb-4">
            <div class="col-12">
              <label for="taxAmount" class="form-label">Total Tax Amount</label>
              <input type="text" id="taxAmount" value="0.00" class="form-control  fs-5 "  style="font-weight: bold; color:#00ff00;background-color: black;" name="total_tax_amount">
            </div>
          </div>

          <div class="text-center">
            <button type="button" class="btn btn-primary w-100 py-2" onclick="calculateTax()">Calculate</button>
          </div>
      
      </div>

      <div class="modal-footer justify-content-between bg-light">
        <p>Insert To: <strong><span id="fname"></span> <span id="lname"></span></strong></p>
        <button type="submit" class="btn btn-success">Insert Tax Amount</button>
      </div>
    </form>
    </div>
  </div>
