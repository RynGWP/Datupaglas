        customClass: {
        popup: 'glassmorphism-popup'
      }
    }).then((result) => {
        if (result.isConfirmed) {
            // Redirect to logout route or perform logout operation
            window.location.href = '/logout';  // Adjust the URL as needed
        }
    });
}

