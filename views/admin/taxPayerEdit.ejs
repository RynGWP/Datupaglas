                          <li class="list-group-item">
                            <b>Property Location</b> <a class="float-right"><input type="text" name="property_location" value="<%= properties.property_location%>"></a>
                          </li>
                          <li class="list-group-item">
                            <b>Property Type</b> <a class="float-right">
                              <select class="custom-select" id="propertyType" name="propertyType" required>
                                <option value="<%= properties.property_type %>" selected ><%= properties.property_type %></option>
                                <option value="Residential">Residential</option>
                                <option value="Commercial">Commercial</option>
                                <option value="Agricultural">Agricultural</option>
                              </select>
                            </a>
                          </li>
                          <li class="list-group-item">
                          <b>Assessed Value</b> <a class="float-right"><input type="text" name="assessedValue" value="<%= properties.assessed_value %>"></a>
                          </li>
                          <li class="list-group-item">
                          <b>Area Size</b> <a class="float-right"><input type="text" name="areaSize" value="<%= properties.area_size %> "></a>
                          </li>
                          <li class="list-group-item">
                          <b>Tax Rate</b> <a class="float-right"><input type="text" name="taxRate" value="<%= properties.tax_rate%>  "> </a>
                          </li>
                          <li class="list-group-item">
                          <b>Ownership Type</b> <a class="float-right"><input type="text" name="ownershipType" value="<%= properties.ownership_type%>"></a>
                          </li>
                          <li class="list-group-item">
                          <b>Property Use</b> <a class="float-right"><input type="text" name="propertyUse" value="<%= properties.property_use%>"></a>
                          </li>
                          <li class="list-group-item">
                          <b>Classification</b> <a class="float-right"><input type="text" name="classification" value="<%= properties.classification%>"></a>
                          </li>
                          <li class="list-group-item">
                          <b>Occupancy Status</b> <a class="float-right"><input type="text" name="occupancyStatus" value="<%= properties.occupancy_status%>"></a>
                          </li>
                          <li class="list-group-item">
                            <b>Last Assessment Date</b> <a class="float-right"> <input type="text" name="lastAssessmentDate" value="<%= new Date(properties.last_assessment_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>"></a>
                          </li>
                          <li class="list-group-item">
                            <b>Next Assessment Date</b> <a class="float-right"> <input type="text" name="nextAssessmentDate" value="<%= new Date(properties.next_assessment_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>"></a>
                          </li>
                      </ul>                       
                  </div>
                  <!-- /.tab-pane -->
                  <% } %>

                </div>
                <!-- /.tab-content -->
              </div><!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
         <!-- /second column -->
        
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
