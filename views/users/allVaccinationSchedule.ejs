    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                  <table id="vaccinationTable" class="table table-bordered table-striped">
                    <thead>
                      <tr>
                        <th class="d-none"></th>
                        <th class="d-none">Full name</th>
                        <th>Vaccine name</th>
                        <th>Schedule date</th>
                        <th>Status</th>
                        <th>Place of Vaccination</th>
                      </tr>
                    </thead>
                    <tbody>
                    
                        <% vaccinationSchedules.forEach(function(vaccinationSchedule) { %>
                          <tr>
                            <td class="d-none vaccinationTdid"><%= vaccinationSchedule.schedule_id %></td>
                            
                            <td class="vaccinationTdShowtoMobile"><%= vaccinationSchedule.vaccine_name %></td>
                            <!-- Schedule date with icon aligned on both sides -->
                            <td class="vaccinationTdShowtoMobile">
                              
                                <span>
                                  <%= new Date(vaccinationSchedule.schedule_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                </span>
                                <button type="button" class="btn btn-sm text-light editSchedule" aria-label="EditSchedule">
                                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-pencil-square me-1" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                  </svg>
                                </button>
                            
                            </td>
                            <td class=" d-none">/td>
                  
                            <!-- Status with text and icon aligned on both sides -->
                            <td class="vaccinationTdShowtoMobile">
                              <span style="width: 100%; display: block; overflow: hidden;">
                                <span style="float: left;">
                                  <% if (vaccinationSchedule.status === 'Taken') { %>
                                    <p class="text-lime mb-0" style="display: inline;">Taken</p>
                                  <% } else { %>
                                    <p class="text-danger mb-0" style="display: inline;">Not Taken</p>
                                  <% } %>
                                </span>
                                <button type="button" class="btn btn-sm text-light editStatus" aria-label="EditVaccination" style="float: right;">
                                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#00ff00" class="bi bi-pencil-square me-1" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                  </svg>
                                </button>
                              </span>
                            </td>
  
                            <td class="vaccinationPlace"> <%= vaccinationSchedule.place_of_vaccination %></td>
                          </tr>
                        <% }) %>
                     
                      <% } %>
                    </tbody>
                  </table>
