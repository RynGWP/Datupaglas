  <nav class="main-header navbar navbar-expand d-flex justify-content-end me-3" style="border-bottom: none;">
    <!-- Login and Sign Up Buttons -->
    <div class="d-flex ">
      <button type="button" class="btn">
          <a href="/login" class="nav-link px-2 text-white">LOGIN</a>
