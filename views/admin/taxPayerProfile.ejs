// Initialize Dropzone
Dropzone.autoDiscover = false;
let dropzone; // Declare dropzone in wider scope

document.addEventListener('DOMContentLoaded', function() {
    dropzone = new Dropzone("#documentDropzone", {
        url: "/upload", // Replace with your upload URL
        thumbnailWidth: 80,
        thumbnailHeight: 80,
        parallelUploads: 20,
        previewTemplate: document.querySelector('#preview-template').innerHTML,
        previewsContainer: "#preview-container",
        autoQueue: false,
        maxFilesize: 10, // MB
        acceptedFiles: ".jpeg,.jpg,.png,.gif,.mp4,.pdf,.psd,.ai,.doc,.docx,.ppt,.pptx",
        dictFileTooBig: "File is too big ({{filesize}}MB). Max filesize: {{maxFilesize}}MB.",
        dictInvalidFileType: "Invalid file type. Please upload only supported formats.",
    });

    // Custom styling for preview
    dropzone.on("addedfile", function(file) {
        console.log("File added:", file.name);
    });

    // Update progress bar
    dropzone.on("totaluploadprogress", function(progress) {
        const progressBar = document.querySelector("#total-progress .progress-bar");
        if (progressBar) {
            progressBar.style.width = progress + "%";
            progressBar.setAttribute("aria-valuenow", progress);
        }
    });

    // Show progress bar
    dropzone.on("sending", function(file) {
        document.querySelector("#total-progress").style.display = "block";
    });

    // Hide progress bar when complete
    dropzone.on("queuecomplete", function() {
        document.querySelector("#total-progress").style.display = "none";
        
        // Optional: Show success message
        Swal.fire({
            icon: 'success',
            title: 'Upload Complete',
            text: 'All files have been uploaded successfully!',
            timer: 2000,
            showConfirmButton: false
        });
    });

    // Error handling
    dropzone.on("error", function(file, errorMessage) {
        console.error("Upload error:", errorMessage);
        
        // Optional: Show error message
        Swal.fire({
            icon: 'error',
            title: 'Upload Failed',
            text: errorMessage
        });
    });

    // Upload button
    document.querySelector("#uploadBtn").addEventListener("click", function() {
        if (dropzone.getQueuedFiles().length > 0) {
            dropzone.enqueueFiles(dropzone.getQueuedFiles());
        } else {
            // Optional: Show warning if no files
            Swal.fire({
                icon: 'warning',
                title: 'No Files',
                text: 'Please add files to upload.'
            });
        }
    });

    // Cancel button - using Bootstrap 3.x/AdminLTE modal hide
    document.querySelector("#cancelBtn").addEventListener("click", function() {
        dropzone.removeAllFiles(true);
        $("#uploadModal").modal('hide');
        // Additional fallback to ensure modal closes
        setTimeout(() => {
            $('.modal-backdrop').remove();
            $('body').removeClass('modal-open');
            $("#uploadModal").hide();
        }, 100);
    });

    // Handle modal close events
    $('#uploadModal').on('hidden.bs.modal', function () {
        // Clear all files when modal is closed
        if (dropzone) {
            dropzone.removeAllFiles(true);
        }
        
        // Reset progress bar
        const progressBar = document.querySelector("#total-progress");
        if (progressBar) {
            progressBar.style.display = "none";
            const progressBarInner = progressBar.querySelector(".progress-bar");
            if (progressBarInner) {
                progressBarInner.style.width = "0%";
                progressBarInner.setAttribute("aria-valuenow", "0");
            }
        }

        // Additional cleanup
        $('.modal-backdrop').remove();
        $('body').removeClass('modal-open');
    });

    // Add custom CSS
    const style = document.createElement('style');
    style.textContent = `
        .dropzone {
            border: 2px dashed #3c8dbc;
            border-radius: 5px;
            background: #f8f9fa;
            min-height: 150px;
            padding: 20px;
            position: relative;
        }

        .dropzone .dz-message {
            text-align: center;
            margin: 2em 0;
        }

        .dz-preview {
            margin: 10px 0;
        }

        .dz-preview .card {
            box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
            margin-bottom: 10px;
        }

        .dz-image {
            width: 80px;
            height: 80px;
            border-radius: 4px;
            overflow: hidden;
            background: #eee;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .dz-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .progress {
            background-color: #e9ecef;
            border-radius: 0.25rem;
            height: 4px;
        }

        .progress-bar {
            background-color: #007bff;
        }

        .dz-remove-container {
            display: flex;
            align-items: center;
        }

        .dz-remove-container .btn-xs {
            padding: 0.2rem 0.4rem;
            font-size: 0.875rem;
        }

        .modal-header {
            background: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }

        .modal-body {
            padding: 20px;
        }
    `;
    document.head.appendChild(style);
});

