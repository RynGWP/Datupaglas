          <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
        </svg>
      </div>
      <div class="modal-body text-dark">
        <form id="editVaccinationStatus" class="p-3">
          <input type="hidden" id="scheduleId" name="scheduleId">
         
          <div class="col-md-12">
            <div class="form-group">
              <label >Select Status</label>
              <select class="form-control select2 " name="status" id="status" style="width: 100%;" required>
                <option selected="selected disabled">Select Status</option>
                <option value="Taken">Taken</option>
                <option value="not taken">Not Taken</option>
              </select>
            </div>
        </div>

       
           
            
              <div class="col-md-12">
               <div class="form-group">
                <label >Place of  Vaccination (Optional)</label>
                <input type="text" class="form-control" placeholder="Input place of vaccination" id="placeOfVaccination" name="placeOfVaccination"> 
               </div>
              </div>
            
        

          
          <div class="d-flex justify-content-end m-2">
            <button type="submit" class="btn btn-success" style="margin-right:5px !important">Update</button>
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

      <!-- Update Vaccination Schedule Modal -->
<div class="modal fade" id="editScheduleModal" tabindex="-1" aria-labelledby="editScheduleModalLabel" aria-hidden="true">
  <div class="modal-dialog col-lg-4"> 
    <div class="modal-content">
      <div class="modal-header" style="background: #1dd3b0;">
        <h5 style="font-weight: bold;" id="editScheduleModalLabel">Edit Vaccination Schedule</h5> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="dark" class="bi bi-pencil-fill" viewBox="0 0 16 16">
          <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
        </svg>
       
      </div>
      <div class="modal-body text-dark">
        <form id="editVaccinationSchedule" class="p-3">
          <input type="hidden" id="scheduleId" name="scheduleId">
          <div class="col-md-12">
            <div class="form-group">
              <label >Current Schedule</label>
            <input type="text" id="vaccinationSchedule" class="form-control" name="vaccinationSchedule" placeholder=" ">
          </div>
          </div>
          <!-- Predefined Date Intervals -->
          <div class="col-md-12 mb-3">
            <label for="scheduleOptions" class=" mb-2">RESCHEDULE BY</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="scheduleOptions" value="1" id="nextWeek">
              <label class="form-check-label " for="nextWeek">
                Next Week
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="scheduleOptions" value="2" id="next2Weeks">
              <label class="form-check-label " for="next2Weeks">
                Next 2 Weeks
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="scheduleOptions" value="3" id="next3Weeks">
              <label class="form-check-label " for="next3Weeks">
                Next 3 Weeks
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="scheduleOptions" value="4" id="nextMonth">
              <label class="form-check-label " for="nextMonth">
                Next Month
              </label>
            </div>
          </div>

          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success "  style="margin-right:5px !important">Update</button>
            <button type="button" class="btn btn-danger " data-bs-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

