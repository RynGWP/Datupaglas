          <!-- second columm -->
          <div class="col-md-6">
            <div class="card">
              <div class="card-header p-2">
                <ul class="nav nav-pills">
                  <li class="nav-item"><a class="nav-link active" href="#additionalPerson" data-toggle="tab">Additional Person</a></li>
                  <li class="nav-item"><a class="nav-link" href="#properties" data-toggle="tab">Properties</a></li>
                </ul>
              </div><!-- /.card-header -->
              <div class="card-body">
                <div class="tab-content">
