<div class="row mt-5">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Files</h3>
        <div class="row d-flex justify-content-end">
          <div class="col-4 d-flex justify-content-end">
                        <!-- Button to trigger the upload modal -->
                        <button class="btn " data-toggle="modal" data-target="#uploadModal" style="background: transparent; border: none; color:green">
                          <i class="fas fa-add"></i>
                        </button>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <% if (locals.files) { %>
            <table id="filesTable" class="table table-bordered">
              <thead>
                <tr>
                  <th>Icon</th>
                  <th>Filename</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% files.forEach(function(file) { %>
                  <tr>
                    <td>
                      <i class="<%= getFileIcon(file.mimetype) %>" style="width: 50px; cursor: pointer;"></i>
                    </td>
                    <td>
                      <span class="text-sm"><%= file.filename %></span>
                    </td>
                    <td>
                      <form action="/deleteFile" id="deleteFileForm" method="post">
                        <input type="hidden" value="<%= file.id %>" name="fileId">
                        <input type="hidden" value="<%= file.taxpayer_id %>" name="taxpayer_id">
                        <button class="btn btn-danger deleteFileBtn" type="submit" style="background: transparent !important; border: none !important;">
                          <svg xmlns="http://www.w3.org/2000/svg" width="25" height="20" fill="#d62828" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zM8 5.5a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zM11.5 6a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
